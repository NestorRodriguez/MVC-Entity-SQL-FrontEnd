@model IEnumerable<MVC2.Models.mvcFutbolistasmodel>

@{
    ViewBag.Title = "Index";
}



<p>
    <a href="@Url.Action("AddOrEdit","Futbolistas")" class="btn btn-default"><i class="fade fa-plus"></i>Create New</a>
</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dorsal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Demarcacion)
            </th>
            <th>ACTIONS</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dorsal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Demarcacion)
                </td>
                <td>
                    <a href="@Url.Action("AddOrEdit","Futbolistas",new { id=item.id})" class="btn btn-default"><i class="fa fa-pencil">Edit</i></a>
                    <a onclick="Delete(@item.id)" class="btn btn-default"><i class="fa fa-trash"></i>Delete</a>
                </td>
            </tr>
        }

</table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccesMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Web Api CRUD Operation', 'Esta seguro de Eliminar en Dato?', function () {
                window.location.href = '@Url.Action("Delete","Futbolistas")/' + id;

            }, null);
                }

    </script>


}
